<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Filter functionality for buttons
    const filterButtons = document.querySelectorAll('.filter-btn');
    const careerCards = document.querySelectorAll('.career-card');
    const noResultsMessage = document.getElementById('no-results');
    
    // Add active class to filter buttons when clicked
    filterButtons.forEach(button => {
      button.addEventListener('click', function() {
        // Remove active class from all buttons
        filterButtons.forEach(btn => btn.classList.remove('active'));
        
        // Add active class to clicked button
        this.classList.add('active');
        
        // Get filter value
        const filterValue = this.getAttribute('data-filter');
        
        // Hide all cards first
        careerCards.forEach(card => {
          card.style.display = 'none';
        });
        
        // Show cards based on filter
        let visibleCount = 0;
        
        if (filterValue === 'all') {
          careerCards.forEach(card => {
            card.style.display = 'block';
            visibleCount++;
          });
        } else {
          careerCards.forEach(card => {
            if (card.getAttribute('data-category') === filterValue) {
              card.style.display = 'block';
              visibleCount++;
            }
          });
        }
        
        // Show/hide no results message
        noResultsMessage.style.display = visibleCount === 0 ? 'block' : 'none';
      });
    });
    
    // Search functionality
    const searchInput = document.getElementById('career-search');
    const searchButton = document.getElementById('search-btn');
    
    function performSearch() {
      const searchTerm = searchInput.value.toLowerCase().trim();
      
      // Reset filters
      filterButtons.forEach(btn => btn.classList.remove('active'));
      document.querySelector('[data-filter="all"]').classList.add('active');
      
      // Hide all cards
      careerCards.forEach(card => {
        card.style.display = 'none';
      });
      
      // If search is empty, show all
      if (searchTerm === '') {
        careerCards.forEach(card => {
          card.style.display = 'block';
        });
        noResultsMessage.style.display = 'none';
        return;
      }
      
      // Search through cards
      let visibleCount = 0;
      careerCards.forEach(card => {
        const title = card.querySelector('h3').textContent.toLowerCase();
        const description = card.querySelector('p').textContent.toLowerCase();
        const category = card.getAttribute('data-category').toLowerCase();
        const qualification = card.querySelectorAll('span')[5].textContent.toLowerCase();
        
        if (title.includes(searchTerm) || 
            description.includes(searchTerm) || 
            category.includes(searchTerm) ||
            qualification.includes(searchTerm)) {
          card.style.display = 'block';
          visibleCount++;
        }
      });
      
      // Show/hide no results message
      noResultsMessage.style.display = visibleCount === 0 ? 'block' : 'none';
    }
    
    // Search on button click
    searchButton.addEventListener('click', performSearch);
    
    // Search on Enter key
    searchInput.addEventListener('keyup', function(event) {
      if (event.key === 'Enter') {
        performSearch();
      }
    });

    // Add hover effect to career boxes
    const careerBoxes = document.querySelectorAll('.career-box');
    careerBoxes.forEach(box => {
      box.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-5px)';
        this.style.boxShadow = '0 8px 20px rgba(24, 53, 80, 0.12)';
      });
      box.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0)';
        this.style.boxShadow = '0 4px 15px rgba(24, 53, 80, 0.08)';
      });
    });
  });
</script>
