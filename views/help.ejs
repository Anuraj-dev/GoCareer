<%- include('partials/header', {
  title: 'Help'
}) %>

<%- include('partials/navigation', {
  path: '/help'
}) %>

<div class="container mt-5">
  <div class="content-container" style="background: rgba(255, 255, 255, 0.95); border-radius: 16px; padding: 2.5rem; margin-bottom: 3rem; box-shadow: 0 6px 20px rgba(24, 53, 80, 0.08); position: relative; z-index: 1;">
    <div class="row justify-content-center mb-4">
      <div class="col-lg-8 text-center">
        <h1 style="color: #183550; font-family: 'Outfit', sans-serif; font-size: 2.5rem; font-weight: 600; margin-bottom: 1rem;">Help & Support</h1>
        <p style="color: rgba(24, 53, 80, 0.8); font-size: 1.1rem; line-height: 1.6; font-family: 'Plus Jakarta Sans', sans-serif; margin-bottom: 1.5rem;">
          Find answers to common questions and learn how to make the most of GoCareer's resources.
        </p>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-md-6 mb-4">
        <div class="support-card" style="background: linear-gradient(135deg, rgba(24, 53, 80, 0.03) 0%, rgba(104, 176, 227, 0.1) 100%); border-radius: 12px; padding: 2rem; height: 100%; text-align: center; border: 1px solid rgba(104, 176, 227, 0.2);">
          <div style="width: 80px; height: 80px; background: rgba(104, 176, 227, 0.15); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
            <i class="bi bi-envelope" style="font-size: 2rem; color: #183550;"></i>
          </div>
          <h3 style="color: #183550; font-family: 'Space Grotesk', sans-serif; font-size: 1.3rem; margin-bottom: 1rem;">Email Support</h3>
          <p style="color: rgba(24, 53, 80, 0.8); font-family: 'Plus Jakarta Sans', sans-serif; margin-bottom: 1.5rem;">
            Have a specific question? Our support team is ready to help you.
          </p>
          <a href="mailto:support@gocareer.in" class="btn" style="background: #183550; color: white; border: none; border-radius: 8px; padding: 0.8rem 2rem; font-family: 'Space Grotesk', sans-serif; transition: all 0.3s ease;">Contact Support</a>
        </div>
      </div>
      <div class="col-md-6 mb-4">
        <div class="support-card" style="background: linear-gradient(135deg, rgba(24, 53, 80, 0.03) 0%, rgba(104, 176, 227, 0.1) 100%); border-radius: 12px; padding: 2rem; height: 100%; text-align: center; border: 1px solid rgba(104, 176, 227, 0.2);">
          <div style="width: 80px; height: 80px; background: rgba(104, 176, 227, 0.15); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem;">
            <i class="bi bi-chat-dots" style="font-size: 2rem; color: #183550;"></i>
          </div>
          <h3 style="color: #183550; font-family: 'Space Grotesk', sans-serif; font-size: 1.3rem; margin-bottom: 1rem;">Live Chat</h3>
          <p style="color: rgba(24, 53, 80, 0.8); font-family: 'Plus Jakarta Sans', sans-serif; margin-bottom: 1.5rem;">
            Connect with our career counselors for real-time assistance and guidance.
          </p>
          <button class="btn" style="background: #183550; color: white; border: none; border-radius: 8px; padding: 0.8rem 2rem; font-family: 'Space Grotesk', sans-serif; transition: all 0.3s ease;">Start Chat</button>
        </div>
      </div>
    </div>

    <div class="faq-section mb-5">
      <h2 style="color: #183550; font-family: 'Space Grotesk', sans-serif; font-size: 1.6rem; margin-bottom: 1.5rem; position: relative; display: inline-block;">
        Frequently Asked Questions
        <span style="position: absolute; bottom: -8px; left: 0; width: 60%; height: 3px; background: #68b0e3;"></span>
      </h2>

      <div class="accordion" id="faqAccordion">
        <!-- FAQ Item 1 -->
        <div class="accordion-item" style="border: 1px solid rgba(104, 176, 227, 0.2); border-radius: 8px; margin-bottom: 1rem; overflow: hidden;">
          <h3 class="accordion-header" id="headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne" style="background: white; color: #183550; font-family: 'Space Grotesk', sans-serif; font-size: 1.1rem; padding: 1rem 1.5rem;">
              How do I get personalized career recommendations?
            </button>
          </h3>
          <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#faqAccordion">
            <div class="accordion-body" style="padding: 1.5rem; color: rgba(24, 53, 80, 0.8); font-family: 'Plus Jakarta Sans', sans-serif; line-height: 1.6;">
              To get personalized career recommendations, complete our career assessment quiz. The quiz evaluates your interests, skills, qualifications, and preferences to suggest career paths that align with your profile. You can access the assessment from the homepage or by clicking on "Take Career Assessment" in the navigation menu.
            </div>
          </div>
        </div>

        <!-- FAQ Item 2 -->
        <div class="accordion-item" style="border: 1px solid rgba(104, 176, 227, 0.2); border-radius: 8px; margin-bottom: 1rem; overflow: hidden;">
          <h3 class="accordion-header" id="headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo" style="background: white; color: #183550; font-family: 'Space Grotesk', sans-serif; font-size: 1.1rem; padding: 1rem 1.5rem;">
              Are the career recommendations based on my location?
            </button>
          </h3>
          <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#faqAccordion">
            <div class="accordion-body" style="padding: 1.5rem; color: rgba(24, 53, 80, 0.8); font-family: 'Plus Jakarta Sans', sans-serif; line-height: 1.6;">
              Yes, our AI-powered system considers your location to provide career recommendations that are relevant to your geographic area. We analyze local job markets, industry trends, and regional demand to ensure the suggestions are practical and accessible for you.
            </div>
          </div>
        </div>

        <!-- FAQ Item 3 -->
        <div class="accordion-item" style="border: 1px solid rgba(104, 176, 227, 0.2); border-radius: 8px; margin-bottom: 1rem; overflow: hidden;">
          <h3 class="accordion-header" id="headingThree">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree" style="background: white; color: #183550; font-family: 'Space Grotesk', sans-serif; font-size: 1.1rem; padding: 1rem 1.5rem;">
              How accurate are the salary ranges shown?
            </button>
          </h3>
          <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#faqAccordion">
            <div class="accordion-body" style="padding: 1.5rem; color: rgba(24, 53, 80, 0.8); font-family: 'Plus Jakarta Sans', sans-serif; line-height: 1.6;">
              The salary ranges provided are based on current industry standards and regional averages. We regularly update this information using data from multiple sources, including industry reports, job portals, and government statistics. However, actual salaries may vary based on specific employers, your experience level, and additional qualifications.
            </div>
          </div>
        </div>

        <!-- FAQ Item 4 -->
        <div class="accordion-item" style="border: 1px solid rgba(104, 176, 227, 0.2); border-radius: 8px; margin-bottom: 1rem; overflow: hidden;">
          <h3 class="accordion-header" id="headingFour">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour" style="background: white; color: #183550; font-family: 'Space Grotesk', sans-serif; font-size: 1.1rem; padding: 1rem 1.5rem;">
              Can I save or bookmark career options for later?
            </button>
          </h3>
          <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#faqAccordion">
            <div class="accordion-body" style="padding: 1.5rem; color: rgba(24, 53, 80, 0.8); font-family: 'Plus Jakarta Sans', sans-serif; line-height: 1.6;">
              Yes, you can save career options for future reference. Simply create an account or log in to your existing account. When viewing career recommendations, click the "Save" or bookmark icon to add it to your saved careers. You can access all saved careers from your user dashboard.
            </div>
          </div>
        </div>

        <!-- FAQ Item 5 -->
        <div class="accordion-item" style="border: 1px solid rgba(104, 176, 227, 0.2); border-radius: 8px; margin-bottom: 1rem; overflow: hidden;">
          <h3 class="accordion-header" id="headingFive">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive" style="background: white; color: #183550; font-family: 'Space Grotesk', sans-serif; font-size: 1.1rem; padding: 1rem 1.5rem;">
              How can I get additional guidance about a specific career?
            </button>
          </h3>
          <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive" data-bs-parent="#faqAccordion">
            <div class="accordion-body" style="padding: 1.5rem; color: rgba(24, 53, 80, 0.8); font-family: 'Plus Jakarta Sans', sans-serif; line-height: 1.6;">
              For more detailed guidance about a specific career, you can:
              <ul style="margin-top: 0.5rem; padding-left: 1.5rem;">
                <li>Click on "Explore More" on any career card to view comprehensive details</li>
                <li>Use our live chat feature to connect with a career counselor</li>
                <li>Email our support team with your specific questions</li>
                <li>Check the Insights section for industry-specific articles and trends</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="resources-section mb-5">
      <h2 style="color: #183550; font-family: 'Space Grotesk', sans-serif; font-size: 1.6rem; margin-bottom: 1.5rem; position: relative; display: inline-block;">
        Helpful Resources
        <span style="position: absolute; bottom: -8px; left: 0; width: 60%; height: 3px; background: #68b0e3;"></span>
      </h2>

      <div class="row">
        <div class="col-md-4 mb-4">
          <a href="#" style="text-decoration: none;">
            <div style="background: white; border-radius: 12px; padding: 1.5rem; text-align: center; height: 100%; box-shadow: 0 4px 15px rgba(24, 53, 80, 0.05); border: 1px solid rgba(104, 176, 227, 0.2); transition: all 0.3s ease;">
              <i class="bi bi-book" style="font-size: 2rem; color: #68b0e3; margin-bottom: 1rem;"></i>
              <h3 style="color: #183550; font-family: 'Space Grotesk', sans-serif; font-size: 1.2rem; margin-bottom: 0.5rem;">User Guide</h3>
              <p style="color: rgba(24, 53, 80, 0.8); font-family: 'Plus Jakarta Sans', sans-serif; font-size: 0.95rem;">
                Detailed instructions on using all features of GoCareer
              </p>
            </div>
          </a>
        </div>
        <div class="col-md-4 mb-4">
          <a href="#" style="text-decoration: none;">
            <div style="background: white; border-radius: 12px; padding: 1.5rem; text-align: center; height: 100%; box-shadow: 0 4px 15px rgba(24, 53, 80, 0.05); border: 1px solid rgba(104, 176, 227, 0.2); transition: all 0.3s ease;">
              <i class="bi bi-play-circle" style="font-size: 2rem; color: #68b0e3; margin-bottom: 1rem;"></i>
              <h3 style="color: #183550; font-family: 'Space Grotesk', sans-serif; font-size: 1.2rem; margin-bottom: 0.5rem;">Video Tutorials</h3>
              <p style="color: rgba(24, 53, 80, 0.8); font-family: 'Plus Jakarta Sans', sans-serif; font-size: 0.95rem;">
                Step-by-step video guides for using GoCareer effectively
              </p>
            </div>
          </a>
        </div>
        <div class="col-md-4 mb-4">
          <a href="#" style="text-decoration: none;">
            <div style="background: white; border-radius: 12px; padding: 1.5rem; text-align: center; height: 100%; box-shadow: 0 4px 15px rgba(24, 53, 80, 0.05); border: 1px solid rgba(104, 176, 227, 0.2); transition: all 0.3s ease;">
              <i class="bi bi-file-earmark-text" style="font-size: 2rem; color: #68b0e3; margin-bottom: 1rem;"></i>
              <h3 style="color: #183550; font-family: 'Space Grotesk', sans-serif; font-size: 1.2rem; margin-bottom: 0.5rem;">Career Guides</h3>
              <p style="color: rgba(24, 53, 80, 0.8); font-family: 'Plus Jakarta Sans', sans-serif; font-size: 0.95rem;">
                Downloadable PDF guides on various career paths
              </p>
            </div>
          </a>
        </div>
      </div>
    </div>

    <div class="contact-section text-center" style="background: linear-gradient(135deg, rgba(24, 53, 80, 0.1) 0%, rgba(104, 176, 227, 0.1) 100%); border-radius: 12px; padding: 2rem; margin-top: 3rem;">
      <h2 style="color: #183550; font-family: 'Space Grotesk', sans-serif; font-size: 1.5rem; margin-bottom: 1rem;">Still Have Questions?</h2>
      <p style="color: rgba(24, 53, 80, 0.8); font-size: 1.1rem; font-family: 'Plus Jakarta Sans', sans-serif; max-width: 600px; margin: 0 auto 1.5rem;">
        Our team is here to help you navigate your career journey. Feel free to reach out with any questions.
      </p>
      <a href="mailto:help@gocareer.in" class="btn" style="background: #183550; color: white; border: none; border-radius: 8px; padding: 0.8rem 2.5rem; font-family: 'Space Grotesk', sans-serif; transition: all 0.3s ease;">Contact Us</a>
    </div>
  </div>
</div>

<%- include('partials/footer', {
  useVanta: false,
  transparent: true
}) %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add hover effect to resource cards
    const resourceCards = document.querySelectorAll('.col-md-4 a div');
    resourceCards.forEach(card => {
      card.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-5px)';
        this.style.boxShadow = '0 8px 20px rgba(24, 53, 80, 0.12)';
      });
      card.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0)';
        this.style.boxShadow = '0 4px 15px rgba(24, 53, 80, 0.05)';
      });
    });
    
    // Support card hover effect
    const supportCards = document.querySelectorAll('.support-card');
    supportCards.forEach(card => {
      card.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-5px)';
        this.style.boxShadow = '0 8px 20px rgba(24, 53, 80, 0.12)';
      });
      card.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0)';
        this.style.boxShadow = '0 4px 15px rgba(24, 53, 80, 0.05)';
      });
    });
  });
</script>
