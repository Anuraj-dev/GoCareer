<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add hover effect to team cards
    const teamCards = document.querySelectorAll('.col-lg-4 > div');
    teamCards.forEach(card => {
      card.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-10px)';
        this.style.boxShadow = '0 10px 30px rgba(24, 53, 80, 0.15)';
      });
      card.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0)';
        this.style.boxShadow = '0 4px 15px rgba(24, 53, 80, 0.08)';
      });
    });

    // Add hover effect to approach cards
